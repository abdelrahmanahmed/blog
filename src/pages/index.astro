---
import Layout from '../layouts/Layout.astro';
import { ExperienceTimeline } from '../components/ExperienceTimeline';
import SocialLinks from '../components/SocialLinks.astro';
---

<Layout title="Abdelrahman Wahdan - Software Engineer">
  <div class="container mx-auto px-4 py-12">
    <div class="mx-auto max-w-4xl">
      <div class="mb-12 overflow-hidden rounded-lg bg-gray-100 p-8 transition-colors dark:bg-[#161b22]">
        <div class="relative">
          <pre class="typing-effect mb-6 text-3xl font-bold"><code><span class="text-purple-600 dark:text-purple-400">const</span> <span class="text-yellow-600 dark:text-yellow-400">name</span> <span class="text-gray-900 dark:text-white">=</span> <span class="text-gray-900 dark:text-white">{</span>
 <span class="text-green-600 dark:text-green-400">"Abdelrahman Wahdan"</span>
<span class="text-gray-900 dark:text-white">}</span></code></pre>

          <div class="space-y-6">
            <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
              <span class="text-green-600 dark:text-green-400"># </span>
              Software engineer with nine years of experience in building scalable web apps
            </p>
            <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
              <span class="text-green-600 dark:text-green-400"># </span>
              Experienced in working with international teams and clients
            </p>

            <div class="flex flex-col items-center justify-between gap-6 pt-4 sm:flex-row">
              <a
                href="https://drive.google.com/file/d/1p4MVFa_SrUT8jGckmU9mZWI7nKRgaVP8/view?usp=sharing"
                target="_blank"
                rel="noopener noreferrer"
                class="group inline-flex items-center rounded-md bg-blue-500 px-6 py-2 text-white transition-colors hover:bg-blue-600"
              >
                <i class="fas fa-terminal mr-2"></i>
                <span>View Resume</span>
              </a>
              <div class="flex w-full justify-center sm:w-auto">
                <SocialLinks />
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="rounded-lg bg-gray-100 p-8 transition-colors dark:bg-[#161b22]">
        <h2 class="mb-8 text-2xl font-bold text-blue-600 dark:text-blue-400">Experience</h2>
        <ExperienceTimeline client:load />
      </div>
    </div>
  </div>
</Layout>